<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/small" />

    <TextView
        android:id="@+id/txt_spcl_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineHeight="19dp"
        android:text="Màn hình LCD 31.5"
        android:textColor="@color/darkGrey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_spcl_sale_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineHeight="19dp"
        android:text="8.790.000 đ"
        android:textColor="@color/tomato"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_spcl_sell_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:lineHeight="16dp"
            android:text="10.970.000"
            android:textColor="@color/coolGrey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_spcl_giam_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_2dp_gradient"
            android:lineHeight="16dp"
            android:padding="2dp"
            android:text="-20%"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>