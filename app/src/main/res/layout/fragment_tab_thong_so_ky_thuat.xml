<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--thuong hieu-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_pale_grey_8dp"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="19dp"
                    android:text="@string/thuong_hieu"
                    android:textColor="@color/coolGrey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineHeight="19dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/darkGrey"
                    android:textSize="14sp"
                    tools:text="Cooler Master" />
            </LinearLayout>

            <!--bao hanh-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_8dp"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="19dp"
                    android:text="@string/bao_hanh"
                    android:textColor="@color/coolGrey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineHeight="19dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/darkGrey"
                    android:textSize="14sp"
                    tools:text="36 thÃ¡ng" />
            </LinearLayout>

            <!--cong suat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_pale_grey_8dp"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="19dp"
                    android:text="@string/cong_suat"
                    android:textColor="@color/coolGrey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineHeight="19dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/darkGrey"
                    android:textSize="14sp"
                    tools:text="140W" />
            </LinearLayout>

            <!--bo nho dem-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_8dp"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="19dp"
                    android:text="@string/bo_nho_dem"
                    android:textColor="@color/coolGrey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineHeight="19dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/darkGrey"
                    android:textSize="14sp"
                    tools:text="8.25MB" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/btn_show_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:text="@string/show_more"
            android:textColor="@color/deepSkyBlue"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/chevron_down" />
    </LinearLayout>
</FrameLayout>
